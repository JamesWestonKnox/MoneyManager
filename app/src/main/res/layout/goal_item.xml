<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1F4E5F"
        app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Goal Title -->
            <TextView
                android:id="@+id/tvGoalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal: New Laptop"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Goal Amount -->
            <TextView
                android:id="@+id/tvGoalDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal Amount: R 0"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <!-- Total Saved -->
            <TextView
                android:id="@+id/tvTotalSaved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Saved: R 0"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>



            <!-- Add Amount -->
            <EditText
                android:id="@+id/etAddAmount"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="Enter amount"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <!-- Add Button -->
            <Button
                android:id="@+id/btnAddToGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to goal"
                android:backgroundTint="#78A7A8"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
